{
  "version": "1.0",
  "repository": "vyn-plugins",
  "description": "Official plugin repository for Vyn video converter",
  "plugins": [
    {
      "id": "vimeo-uploader",
      "name": "Vimeo Uploader",
      "version": "1.4.0",
      "description": "Upload video folders to Vimeo and create playlist links",
      "author": "Vyn Team",
      "file": "vimeo-uploader.sh",
      "documentation": "vimeo-uploader.md",
      "category": "Upload",
      "tags": ["vimeo", "upload", "batch", "playlist"],
      "requirements": {
        "commands": ["curl", "jq"],
        "api": "Vimeo API access token required"
      },
      "features": [
        "Folder-based batch uploads",
        "Automatic playlist creation", 
        "Link generation (links.txt)",
        "Multi-format support",
        "Progress tracking",
        "Error handling"
      ],
      "usage": "vyn --plugin vimeo-uploader /path/to/video/folder",
      "setup": {
        "required": true,
        "description": "Requires Vimeo API access token",
        "instructions": [
          "1. Go to https://developer.vimeo.com/apps",
          "2. Create a new app",
          "3. Generate access token with 'upload' and 'create' scopes",
          "4. Token will be requested on first use"
        ]
      }
    },
    {
      "id": "quality-analyzer",
      "name": "Quality Analyzer",
      "version": "1.0.0",
      "description": "Analyze video quality metrics and generate optimization reports",
      "author": "Vyn Team",
      "file": "quality-analyzer.sh",
      "documentation": "quality-analyzer.md",
      "category": "Analysis",
      "tags": ["analysis", "quality", "metrics", "optimization", "reports"],
      "requirements": {
        "commands": ["ffprobe", "bc", "jq"],
        "notes": "bc (calculator) package required for calculations"
      },
      "features": [
        "Comprehensive quality metrics",
        "Video codec analysis",
        "Bitrate optimization suggestions",
        "Compression efficiency assessment",
        "Detailed quality reports",
        "Batch folder analysis",
        "Optimization recommendations"
      ],
      "usage": "vyn --plugin quality-analyzer /path/to/video/folder",
      "metrics": [
        "Resolution and aspect ratio",
        "Bitrate and compression ratio",
        "Frame rate analysis",
        "Codec efficiency rating",
        "Quality score (0-100)",
        "File size optimization potential"
      ],
      "outputs": [
        "Individual quality reports (.txt)",
        "Summary analysis report",
        "Optimization suggestions",
        "Recommended vyn commands"
      ]
    }
  ],
  "categories": [
    {
      "id": "upload",
      "name": "Upload Services",
      "description": "Plugins for uploading videos to various platforms"
    },
    {
      "id": "analysis",
      "name": "Video Analysis",
      "description": "Plugins for analyzing video quality and characteristics"
    },
    {
      "id": "conversion",
      "name": "Video Conversion",
      "description": "Plugins for specialized video conversion tasks"
    },
    {
      "id": "utility",
      "name": "Utilities",
      "description": "Helper plugins for various video tasks"
    }
  ]
}
